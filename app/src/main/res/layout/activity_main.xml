<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="importSamplePkcs12"
        android:text="Install sample PKCS 12 objects"
        tools:layout_editor_absoluteX="62dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="clearKeyStore"
        android:text="Clean sample key store"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="252dp" />

    <Button
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:onClick="simulateBroadcast"
        android:text="Simulate update broadcast"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="252dp" />

</RelativeLayout>